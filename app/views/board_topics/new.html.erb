<%= form_for @board_topic, url: board_topics_create_path do |f| %>
  <%= f.label :title %><br />
  <%= f.text_field :title %><br /><br />

  <%= f.label :username %><br />
  <%= f.text_field :username %><br /><br />

  <%= f.fields_for :board_topic_posts do |p| %>
    <%= p.label :text %><br />
    <%= p.text_area :text %><br /><br />
  <% end %>

  <%= f.submit 'Erstellen' %>
<% end %>
